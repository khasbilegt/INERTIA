<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSensor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#353434"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/sensor_text"
            style="@style/genericStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Sensor values"
            android:textColor="#4CAF50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sensor_y_text"
            style="@style/genericStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:hint="Y"
            android:textColor="#2196F3"
            app:layout_constraintEnd_toStartOf="@+id/sensor_z_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sensor_x_text"
            app:layout_constraintTop_toBottomOf="@+id/sensor_text" />

        <TextView
            android:id="@+id/sensor_z_text"
            style="@style/genericStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:hint="Z"
            android:textColor="#CF0D34"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sensor_y_text"
            app:layout_constraintTop_toBottomOf="@+id/sensor_text" />

        <TextView
            android:id="@+id/velocity_text"
            style="@style/genericStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp"
            android:text="Velocity"
            android:textAlignment="center"
            android:textColor="#2196F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sensor_y_text" />

        <TextView
            android:id="@+id/velocity_x_text"
            style="@style/genericStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:hint="X"
            android:textColor="#4CAF50"
            app:layout_constraintEnd_toStartOf="@+id/velocity_y_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/velocity_text" />

        <TextView
            android:id="@+id/velocity_y_text"
            style="@style/genericStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:hint="Y"
            android:textColor="#2196F3"
            app:layout_constraintEnd_toStartOf="@+id/velocity_z_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/velocity_x_text"
            app:layout_constraintTop_toBottomOf="@+id/velocity_text" />

        <TextView
            android:id="@+id/velocity_z_text"
            style="@style/genericStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:hint="Z"
            android:textColor="#CF0D34"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/velocity_y_text"
            app:layout_constraintTop_toBottomOf="@+id/velocity_text" />

        <TextView
            android:id="@+id/position_text"
            style="@style/genericStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp"
            android:text="Position"
            android:textColor="#CF0D34"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/velocity_y_text" />

        <TextView
            android:id="@+id/position_x_text"
            style="@style/genericStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:hint="X"
            android:textColor="#4CAF50"
            app:layout_constraintEnd_toStartOf="@+id/position_y_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/position_text" />

        <TextView
            android:id="@+id/position_y_text"
            style="@style/genericStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Y"
            android:textColor="#2196F3"
            app:layout_constraintEnd_toStartOf="@+id/position_z_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/position_x_text"
            app:layout_constraintTop_toBottomOf="@+id/position_text" />

        <TextView
            android:id="@+id/position_z_text"
            style="@style/genericStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Z"
            android:textColor="#CF0D34"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/position_y_text"
            app:layout_constraintTop_toBottomOf="@+id/position_text" />

        <TextView
            android:id="@+id/sensor_x_text"
            style="@style/genericStyle"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:hint="X"
            android:textColor="#4CAF50"
            app:layout_constraintEnd_toStartOf="@+id/sensor_y_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sensor_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>